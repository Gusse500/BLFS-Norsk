      <seglistitem>
        <seg>image_to_j2k, j2k_dump og j2k_to_image</seg>
        <seg>libopenjpeg.so</seg>
        <seg>/usr/include/openjpeg-1.5 og /usr/share/doc/openjpeg-1.5</seg>
