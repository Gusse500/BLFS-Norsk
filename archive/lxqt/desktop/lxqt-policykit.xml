    <bridgehead renderas="sect3">lxqt-policykit Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="liblxqt"/>,
      <xref linkend="polkit-qt"/>
    </para>

