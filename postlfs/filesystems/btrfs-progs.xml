  <sect2 role="content">
    <title>Innhold</title>

    <segmentedlist>
      <segtitle>Installerte Programmer</segtitle>
      <segtitle>Installerte Biblioteker</segtitle>
      <segtitle>Installerte Mapper</segtitle>

      <seglistitem>
        <seg>
          btrfs,
          btrfs-convert,
          btrfs-find-root,
          btrfs-image,
          btrfs-map-logical,
          btrfs-select-super,
          btrfsck (lenker til btrfs),
          btrfstune,
          fsck.btrfs, og
          mkfs.btrfs
        </seg>

        <seg>
          libbtrfs.so og
          libbtrfsutil.so
        </seg>

        <seg>/usr/include/btrfs</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Korte Beskrivelser</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="btrfs-prog">
        <term><command>btrfs</command></term>
        <listitem>
          <para>
            er hovedgrensesnittet i btrfs filsystemoperasjoner
          </para>
          <indexterm zone="btrfs-progs btrfs-prog">
            <primary sortas="b-btrfs">btrfs</primary>
          </indexterm>
