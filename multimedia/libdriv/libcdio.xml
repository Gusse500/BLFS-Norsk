      <varlistentry id="cdda-player">
        <term><command>cdda-player</command></term>
        <listitem>
          <para>
            er en enkel cd-spiller
          </para>
          <indexterm zone="libcdio cdda-player">
            <primary sortas="b-cdda-player">cdda-player</primary>
          </indexterm>
        </listitem>
