<sect1 id="gtk-doc" xreflabel="GTK-Doc-&gtk-doc-version;">
  <?dbhtml filename="gtk-doc.html"?>


  <title>GTK-Doc-&gtk-doc-version;</title>

  <indexterm zone="gtk-doc">
    <primary sortas="a-GTK-Doc">GTK-Doc</primary>
