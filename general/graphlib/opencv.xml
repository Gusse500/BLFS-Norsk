      <xref linkend="doxygen"/>,
      <xref linkend="java"/>,
      <xref linkend="numpy"/>,
      <xref linkend="protobuf"/>,
      <ulink url="https://math-atlas.sourceforge.net/">ATLAS</ulink>,
