  <sect2 role="content">
    <title>Innhold</title>

    <segmentedlist>
      <segtitle>Installerte Programmer</segtitle>
      <segtitle>Installert Bibliotek</segtitle>
      <segtitle>Installerte Mapper</segtitle>

      <seglistitem>
        <seg>
          bscalc
        </seg>
        <seg>
          libbytesize.so
        </seg>
        <seg>
          /usr/include/bytesize og
          /usr/lib/python&python3-majorver;/site-packages/bytesize
