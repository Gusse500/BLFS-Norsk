      <listitem>
        <para>
          Nedlasting (HTTP): <ulink url="&enchant-download-http;"/>
        </para>
      </listitem>
      <listitem>
        <para>
          Nedlasting (FTP): <ulink url="&enchant-download-ftp;"/>
        </para>
      </listitem>
      <listitem>
        <para>
          Nedlasting MD5 sum: &enchant-md5sum;
        </para>
      </listitem>
      <listitem>
        <para>
          Nedlastingsstørrelse: &enchant-size;
        </para>
      </listitem>
      <listitem>
