        <seg>
          libSPIRV-Tools-diff.so,
          libSPIRV-Tools-link.so,
          libSPIRV-Tools-lint.so,
          libSPIRV-Tools-opt.so,
          libSPIRV-Tools-reduce.so,
          libSPIRV-Tools-shared.so, og
          libSPIRV-Tools.so
        </seg>
        <seg>
          /usr/include/spirv-tools og
          /usr/lib/cmake/SPIRV-Tools
        </seg>
      </seglistitem>
    </segmentedlist>

